{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "outDir": "electron-dist",
    "types": ["node"],
    "lib": ["esnext"]
  },
  "include": [
    "electron-main/**/*.ts",
    "electron-preload/**/*.ts",
    "electron-node/**/*.ts"
  ]
}
